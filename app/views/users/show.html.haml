%h2.form-signin-heading Please sign in
= form_for @user, html: {class: "form-signin"} do |f|
  =f.text_field :email(class: "input-block-level", placeholder: "Email address", type: "text"), params[:email]
  =f.password_field :password(class: "input-block-level", placeholder: "Password"), params[:password]
  =f.label :remember_me, 'Remember me'(class: "checkbox", value: "remember-me")
  =f.submit 'Sign in', class: "btn btn-large btn-primary"
